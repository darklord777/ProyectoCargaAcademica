<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CicloMenuActivity" >

    <Button
        android:id="@+id/button3_MenuCiclo_concultar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button2_MenuCiclo_eliminar"
        android:layout_below="@+id/button2_MenuCiclo_eliminar"
        android:layout_marginTop="68dp"
        android:drawableRight="@drawable/save"
        android:onClick="insertarCiclo"
        android:text="@string/button1_insertar_ciclo"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/button1_MenuCiclo_insertar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button4_MenuCiclo_actualizar"
        android:layout_below="@+id/button4_MenuCiclo_actualizar"
        android:drawableRight="@drawable/save"
        android:onClick="insertarCiclo"
        android:text="@string/button1_insertar_ciclo"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/button4_MenuCiclo_actualizar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:drawableRight="@drawable/save"
        android:onClick="insertarCiclo"
        android:text="@string/button1_insertar_ciclo"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/button2_MenuCiclo_eliminar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1_MenuCiclo_insertar"
        android:layout_centerVertical="true"
        android:drawableRight="@drawable/save"
        android:onClick="insertarCiclo"
        android:text="@string/button1_insertar_ciclo"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>