<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AreMateriaNuevaActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="@string/btnNuevaAreaMateria"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/edtIdAreaMat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:hint="@string/edtIdAreaMat" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnGuarfarAreaMat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spnCodMateNuevaAreMat"
        android:layout_below="@+id/spnCodMateNuevaAreMat"
        android:layout_marginTop="22dp"
        android:drawableRight="@drawable/save2"
        android:onClick="guardarAreaMateria"
        android:text="@string/btnGuarfarAreaMat" />

    <Spinner
        android:id="@+id/spnIdDeptoNuevaAreaMat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spnCodMateNuevaAreMat"
        android:layout_below="@+id/edtIdAreaMat"
        android:layout_marginTop="18dp" />

    <Spinner
        android:id="@+id/spnCodMateNuevaAreMat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtIdAreaMat"
        android:layout_below="@+id/spnIdDeptoNuevaAreaMat"
        android:layout_marginTop="15dp" />

</RelativeLayout>
