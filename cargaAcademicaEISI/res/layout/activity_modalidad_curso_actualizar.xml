<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ModalidadCursoActualizarActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="@string/Act_ModCurso" />
 
    <Spinner
        android:id="@+id/spn_Select_Local"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:prompt="@string/spinner_EModCurso" />

    <EditText
        android:id="@+id/ModCursoN_Act"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spn_Select_Local"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="@string/msgNombreModCurso"/>

    <EditText
        android:id="@+id/ModCursoDH_Act"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ModCursoN_Act"
        android:layout_below="@+id/ModCursoN_Act"
        android:ems="10"
        android:hint="@string/msgDesHorasModCurso" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ModCursoDH_Act"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:onClick="ActualizarModCurso"
        android:text="@string/ButtonActModalidadC" />

</RelativeLayout>