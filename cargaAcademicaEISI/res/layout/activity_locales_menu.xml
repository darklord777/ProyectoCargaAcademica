<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LocalesMenuActivity" >

    <TextView
        android:id="@+id/textLocales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="@string/TextViewLocales"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btn_MenuLocal_Elim"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_MenuLocal_Cons"
        android:layout_below="@+id/btn_MenuLocal_Cons"
        android:layout_marginTop="18dp"
        android:drawableRight="@drawable/clear"
        android:onClick="insertarCiclo"
        android:text="@string/btn3_eliminar_local"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/button3_MenuCiclo_C"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_MenuLocal_Elim"
        android:layout_below="@+id/btn_MenuLocal_Elim"
        android:layout_marginTop="18dp"
        android:drawableRight="@drawable/update"
        android:onClick="insertarCiclo"
        android:text="@string/btn4_actualizar_local"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btn_MenuLocal_Ins"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_MenuLocal_Cons"
        android:layout_below="@+id/textLocales"
        android:layout_marginTop="39dp"
        android:drawableRight="@drawable/save2"
        android:onClick="insertarCiclo"
        android:text="@string/btn1_insertar_local"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btn_MenuLocal_Cons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_MenuLocal_Ins"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/search"
        android:onClick="insertarCiclo"
        android:text="@string/btn2_consultar_local"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>