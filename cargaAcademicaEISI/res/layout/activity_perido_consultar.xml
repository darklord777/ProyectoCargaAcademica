<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PeridoConsultarActivity" >

    <TextView
        android:id="@+id/textView1_consult_inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="@string/msgConsultPeriodo"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:id="@+id/spn_Cons_Pero"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/editfechafinUp"
        android:layout_below="@+id/textView1_consult_inicio"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/edtfechainiUp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spn_Cons_Pero"
        android:layout_below="@+id/spn_Cons_Pero"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:hint="@string/msgInic" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editfechafinUp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtfechainiUp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/msgFini" />

</RelativeLayout>