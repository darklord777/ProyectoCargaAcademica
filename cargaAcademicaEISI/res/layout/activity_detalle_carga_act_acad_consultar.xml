<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DetalleCargaActAcadConsultarActivity" >

      <Spinner
        android:id="@+id/spinnerZ1_iddocente_consultar"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/textViewZ4_insert"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewZ3_insertar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinnerZ2_anioCiclo_consultar"
        android:layout_below="@+id/spinnerZ2_anioCiclo_consultar"
        android:layout_marginTop="21dp"
        android:text="@string/spinner_ciclo"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/spinnerZ3_cicloCiclo_consultar"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textViewZ3_insertar"
        android:layout_below="@+id/textViewZ3_insertar" />

    <TextView
        android:id="@+id/textViewZ2_insertar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinnerZ1_iddocente_consultar"
        android:layout_below="@+id/spinnerZ1_iddocente_consultar"
        android:layout_marginTop="17dp"
        android:text="@string/spinner_anio_ciclo"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/spinnerZ2_anioCiclo_consultar"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textViewZ2_insertar"
        android:layout_below="@+id/textViewZ2_insertar" />

    <TextView
        android:id="@+id/textViewZ4_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinnerZ1_iddocente_consultar"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:text="@string/TextView1_iddocente"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textViewZ1_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinnerZ3_cicloCiclo_consultar"
        android:layout_below="@+id/spinnerZ3_cicloCiclo_consultar"
        android:layout_marginTop="16dp"
        android:text="@string/textview4_actividadacademica_insert1"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/spinnerZ4_idactividad_consultar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textViewZ1_insert"
        android:layout_below="@+id/textViewZ1_insert" />

    <Button
        android:id="@+id/button1_ayuda_consultaactividades"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinnerZ4_idactividad_consultar"
        android:layout_below="@+id/spinnerZ4_idactividad_consultar"
        android:layout_marginTop="18dp"
        android:drawableRight="@drawable/help"
        android:onClick="ayuda"
        android:text="@string/button1_ayuda_cargaacademica"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
</RelativeLayout>