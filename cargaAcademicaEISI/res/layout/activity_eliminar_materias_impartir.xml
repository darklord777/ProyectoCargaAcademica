<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EliminarMateriasImpartirActivity" >

    <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_centerHorizontal="true"
         android:text="@string/msgactivityEliminarMatImpartir"
         android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/spnEliminarDoceMatImp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/editTxtEliminarNomMatImp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spnEliminarDoceMatImp"
        android:layout_centerHorizontal="true"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/msgeditTxtInsertNomDocDepto" />

    <EditText
        android:id="@+id/editTxtEliminarApellidoMatImp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTxtEliminarNomMatImp"
        android:layout_below="@+id/editTxtEliminarNomMatImp"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/msgeditTxtInsertApeDocDepto" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editTxtEliminarAreaMatImp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTxtEliminarApellidoMatImp"
        android:layout_below="@+id/spnEliminarAreaMatImp"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/msgeditTxtInsertNomMatMatImp" />

    <Spinner
        android:id="@+id/spnEliminarAreaMatImp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/editTxtEliminarApellidoMatImp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnEliminarDocenteAreaMatImp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spnEliminarAreaMatImp"
        android:layout_below="@+id/editTxtEliminarAreaMatImp"
        android:layout_marginTop="42dp"
        android:drawableRight="@drawable/clear"
        android:onClick="EliminarMatImpar"
        android:text="@string/msgbtnEliminarMatImpar" />

</RelativeLayout>
