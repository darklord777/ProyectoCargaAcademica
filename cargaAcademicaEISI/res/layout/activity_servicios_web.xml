<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ServiciosWebActivity" >

    <Button
        android:id="@+id/btnActualizarMateria"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_custom"
        android:text="ActualizarMateria" />

    <Button
        android:id="@+id/btnIngresarMateria"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnActualizarMateria"
        android:layout_below="@+id/btnActualizarMateria"
        android:layout_marginTop="36dp"
        android:background="@drawable/button_custom"
        android:text="IngresarMateria" />

    <Button
        android:id="@+id/btnEliminarMateria"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnIngresarMateria"
        android:layout_below="@+id/btnIngresarMateria"
        android:layout_marginTop="34dp"
        android:background="@drawable/button_custom"
        android:text="EliminarMateria" />

</RelativeLayout>