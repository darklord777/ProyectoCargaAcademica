<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ActualizarDeptoActivity" >

    <TextView
        android:id="@+id/textView1_consult_inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="@string/msgActualizarDepto"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:id="@+id/spnActIdDepto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1_consult_inicio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/edtActNomDepto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="@string/msgNomDepto" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnActGuardarDepto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtActNomDepto"
        android:layout_below="@+id/edtActNomDepto"
        android:layout_marginTop="26dp"
        android:drawableRight="@drawable/save2"
        android:onClick="actualizarDepto"
        android:text="@string/btnGuardarDepto"
        android:textAppearance="?android:attr/textAppearanceMediumInverse" />

</RelativeLayout>
