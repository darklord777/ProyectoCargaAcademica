<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ModalidadCursoMenuActivity" >

    <Button
        android:id="@+id/btn_MenuModalidadCurso_Ins"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:drawableRight="@drawable/save2"
        android:text="@string/btn1_insertar_ModalidadCurso"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btn_MenuModalidadCurso_Cons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_MenuModalidadCurso_Ins"
        android:drawableRight="@drawable/search"
        android:text="@string/btn2_consultar_ModalidadCurso"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btn_MenuModalidadCurso_Elim"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_MenuModalidadCurso_Cons"
        android:drawableRight="@drawable/clear"
        android:text="@string/btn3_eliminar_ModalidadCurso"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btn_MenuModalidadCurso_Act"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_MenuModalidadCurso_Elim"
        android:drawableRight="@drawable/update"
        android:text="@string/btn4_actualizar_ModalidadCurso"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="@string/TextViewModalidadCurso"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>