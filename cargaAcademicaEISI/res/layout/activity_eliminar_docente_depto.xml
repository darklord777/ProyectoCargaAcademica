<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EliminarDocenteDeptoActivity" >

   <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/btnEliminarDocDepto"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btnEliminarDocenteDepto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spnElimIdDepDocDepto"
        android:layout_alignParentBottom="true"
        android:drawableRight="@drawable/clear"
        android:onClick="EliminarDocenteDepto"
        android:text="@string/btnEliminarDocDepto" />

    <Spinner
        android:id="@+id/spnElimIdDepDocDepto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/editTxtElimApeDocDepto" />

    <EditText
        android:id="@+id/editTxtElimApeDocDepto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spnElimIdDocDocDepto"
        android:layout_centerHorizontal="true"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/msgeditTxtInsertApeDocDepto" />

    <EditText
        android:id="@+id/editTxtElimNomDocDepto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTxtElimApeDocDepto"
        android:layout_below="@+id/spnElimIdDepDocDepto"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/msgeditTxtInsertNomDocDepto" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editTxtElimNomDepDocDepto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTxtElimNomDocDepto"
        android:layout_below="@+id/editTxtElimNomDocDepto"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/msgeditTxtInsertNomDeptoDocDepto" />

    <Spinner
        android:id="@+id/spnElimIdDocDocDepto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" />

</RelativeLayout>
