<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DetalleCargaMateriaInsertarActivity" >

        <Spinner
        android:id="@+id/spinner1_detallecargamatria_iddocente_insertar"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/textView4_detallemateria_insert"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner2_detallecargamatria_anioCiclo_insertar"
        android:layout_below="@+id/spinner2_detallecargamatria_anioCiclo_insertar"
        android:layout_marginTop="21dp"
        android:text="@string/spinner_ciclo"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/spinner3_detallecargamatria_cicloCiclo_insertar"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3" />

    <TextView
        android:id="@+id/textView2_fin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner1_detallecargamatria_iddocente_insertar"
        android:layout_below="@+id/spinner1_detallecargamatria_iddocente_insertar"
        android:layout_marginTop="17dp"
        android:text="@string/spinner_anio_ciclo"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/spinner2_detallecargamatria_anioCiclo_insertar"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textView2_fin"
        android:layout_below="@+id/textView2_fin" />

    <TextView
        android:id="@+id/textView4_detallemateria_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner1_detallecargamatria_iddocente_insertar"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:text="@string/TextView1_iddocente"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView1_detallemateria_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner3_detallecargamatria_cicloCiclo_insertar"
        android:layout_below="@+id/spinner3_detallecargamatria_cicloCiclo_insertar"
        android:layout_marginTop="16dp"
        android:text="@string/textview1_detallemateria_insert1"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/spinner4_detallecargamatria_insert"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textView1_detallemateria_insert"
        android:layout_below="@+id/textView1_detallemateria_insert" />

    <Button
        android:id="@+id/button1_eliminar_cargaacademica"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner4_detallecargamatria_insert"
        android:layout_below="@+id/spinner4_detallecargamatria_insert"
        android:layout_marginTop="16dp"
        android:drawableRight="@drawable/save2"
        android:onClick="insertarDetalleCargaMaterias"
        android:text="@string/button1_insertar_detallemateria"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
</RelativeLayout>