<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CargaAcademicaEliminarActivity" >

    <TextView
        android:id="@+id/textView4_detallemateria_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner3_cargaacademica_cicloCiclo_eliminar"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:text="@string/TextView1_iddocente"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/spinner1_cargaacademica_iddocente_eliminar"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textView4_detallemateria_insert"
        android:layout_below="@+id/textView4_detallemateria_insert" />

    <Spinner
        android:id="@+id/spinner2_cargaacademica_anioCiclo_eliminar"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/spinner1_cargaacademica_iddocente_eliminar"
        android:layout_below="@+id/spinner1_cargaacademica_iddocente_eliminar"
        android:layout_marginTop="45dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner3_cargaacademica_cicloCiclo_eliminar"
        android:layout_below="@+id/spinner2_cargaacademica_anioCiclo_eliminar"
        android:layout_marginTop="28dp"
        android:text="@string/spinner_ciclo"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/spinner3_cargaacademica_cicloCiclo_eliminar"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button1_eliminar_cargaacademica"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner3_cargaacademica_cicloCiclo_eliminar"
        android:layout_below="@+id/spinner3_cargaacademica_cicloCiclo_eliminar"
        android:layout_marginTop="45dp"
        android:drawableRight="@drawable/clear"
        android:text="@string/button1_eliminar_cargaacademica"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:onClick="eliminarCargaAcademica" />
        
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/spinner2_cargaacademica_anioCiclo_eliminar"
            android:layout_below="@+id/spinner1_cargaacademica_iddocente_eliminar"
            android:layout_marginTop="24dp"
            android:text="@string/spinner_anio_ciclo"
            android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
