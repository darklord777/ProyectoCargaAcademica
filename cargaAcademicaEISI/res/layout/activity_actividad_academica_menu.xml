<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ActividadAcademicaMenuActivity" >

    <Button
        android:id="@+id/btn_MenuActividadAcad_Ins"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="141dp"
        android:drawableRight="@drawable/save2"
        android:text="@string/btn1_insertar_ActividadAcad"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btn_MenuActividadAcad_Cons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_MenuActividadAcad_Ins"
        android:layout_centerHorizontal="true"
        android:drawableRight="@drawable/search"
        android:text="@string/btn2_consultar_ActividadAcad"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btn_MenuActividadAcad_Elim"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_MenuActividadAcad_Cons"
        android:layout_centerHorizontal="true"
        android:drawableRight="@drawable/clear"
        android:text="@string/btn3_eliminar_ActividadAcad"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btn_MenuActividadAcad_Act"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_MenuActividadAcad_Elim"
        android:layout_centerHorizontal="true"
        android:drawableRight="@drawable/update"
        android:text="@string/btn4_actualizar_ActividadAcad"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:text="@string/TextViewActividadAcad"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>