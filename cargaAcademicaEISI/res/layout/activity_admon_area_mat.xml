<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AdmonAreaMatActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="@string/btnAdmonAreaMateria"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btnConsultarAreaMat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnEliminarAreaMat"
        android:layout_below="@+id/btnNuevaAreaMateria"
        android:layout_marginTop="22dp"
        android:text="@string/btnConsultarAreaMat"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:drawableRight="@drawable/search" />

    <Button
        android:id="@+id/btnNuevaAreaMateria"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnConsultarAreaMat"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="30dp"
        android:text="@string/btnNuevaAreaMateria"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:drawableRight="@drawable/save2" />

    <Button
        android:id="@+id/btnEliminarAreaMat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnConsultarAreaMat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/btnEliminarAreaMat"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:drawableRight="@drawable/clear" />

</RelativeLayout>