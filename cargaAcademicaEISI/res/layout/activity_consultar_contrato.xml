<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ConsultarContratoActivity" >

    <EditText
        android:id="@+id/editTxtConsultHorasTipoCont"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTxtConsultNomTipoCont"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="@string/edtNomMateria" />

    <EditText
        android:id="@+id/editTxtConsultNomTipoCont"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTxtConsultHorasTipoCont"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="@string/edtNomMateria" />

    <Spinner
        android:id="@+id/spnConsultCodTipoCont"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTxtConsultNomTipoCont"
        android:layout_alignLeft="@+id/editTxtConsultNomTipoCont"
        android:layout_marginBottom="35dp" />

</RelativeLayout>