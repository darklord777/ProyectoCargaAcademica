<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ConsultarContratoActivity" >

     <EditText
        android:id="@+id/editTxtConsultHorasTipoCont"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTxtConsultNomTipoCont"
        android:layout_marginTop="48dp"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/msgeditTxtConsultarHorasTipoCont" />

    <Spinner
        android:id="@+id/spnConsultCodTipoCont"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTxtConsultNomTipoCont"
        android:layout_alignLeft="@+id/editTxtConsultNomTipoCont"
        android:layout_marginBottom="35dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTxtConsultHorasTipoCont"
        android:layout_below="@+id/editTxtConsultNomTipoCont"
        android:layout_marginTop="22dp"
        android:text="@string/msgInsertHoras"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTxtConsultNomTipoCont"
        android:layout_alignLeft="@+id/spnConsultCodTipoCont"
        android:text="@string/msgInsertNombre"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editTxtConsultNomTipoCont"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_centerVertical="true"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/msgeditTxtConsultarNomTipoCont" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spnConsultCodTipoCont"
        android:layout_alignLeft="@+id/spnConsultCodTipoCont"
        android:text="@string/msgInsertCodigo"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/msgactivityconsultarcontrato"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>