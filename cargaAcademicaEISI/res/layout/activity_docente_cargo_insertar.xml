<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DocenteCargoInsertarActivity" >
    

    <Button
        android:id="@+id/btnInsertDocCar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spnIdPer"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="68dp"
        android:drawableRight="@drawable/save2"
        android:onClick="insertarDocenteCargo"
        android:text="@string/btnNuevoDocentCargo" />

    <Spinner
        android:id="@+id/spnIdPer"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/btnInsertDocCar"
        android:layout_alignLeft="@+id/spnIdCar"
        android:layout_marginBottom="37dp" />

    <EditText
        android:id="@+id/edtNvoDocCargo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/edtIdDocCarg"
        android:maxLength="6" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="@string/btnNuevoDocCargo"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:id="@+id/spnIdCar"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/spnIdDoc"
        android:layout_below="@+id/spnIdDoc"
        android:layout_marginTop="29dp" />

    <Spinner
        android:id="@+id/spnIdDoc"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/edtNvoDocCargo"
        android:layout_below="@+id/edtNvoDocCargo"
        android:layout_marginTop="31dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spnIdDoc"
        android:layout_below="@+id/edtNvoDocCargo"
        android:text="Selecione ID docente"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spnIdCar"
        android:layout_below="@+id/spnIdDoc"
        android:text="Selecione ID Periodo"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spnIdPer"
        android:layout_below="@+id/spnIdCar"
        android:text="Selecione ID Cargo"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>