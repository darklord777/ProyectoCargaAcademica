<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ModalidadAAMenuActivity" >

    <Button
        android:id="@+id/btn_MenuModalidad_Act"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_MenuModalidad_Elim"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="76dp"
        android:drawableRight="@drawable/update"
        android:text="@string/btn4_actualizar_Modalidad"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textMenuModalidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="34dp"
        android:text="@string/TextViewModalidad"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btn_MenuModalidad_Ins"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textMenuModalidad"
        android:layout_below="@+id/textMenuModalidad"
        android:layout_marginTop="25dp"
        android:drawableRight="@drawable/save2"
        android:text="@string/btn1_insertar_Modalidad"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btn_MenuModalidad_Cons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_MenuModalidad_Ins"
        android:layout_below="@+id/btn_MenuModalidad_Ins"
        android:layout_marginTop="24dp"
        android:drawableRight="@drawable/search"
        android:text="@string/btn2_consultar_Modalidad"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btn_MenuModalidad_Elim"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_MenuModalidad_Act"
        android:layout_alignLeft="@+id/btn_MenuModalidad_Cons"
        android:layout_marginBottom="26dp"
        android:drawableRight="@drawable/clear"
        android:text="@string/btn3_eliminar_Modalidad"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>