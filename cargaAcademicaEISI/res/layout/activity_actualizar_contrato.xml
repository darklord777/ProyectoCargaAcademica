<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ActualizarContratoActivity" >

    <Spinner
        android:id="@+id/spnActualizarCodTipoCont"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp" />

    <EditText
        android:id="@+id/editTxtActualizarNomTipoCont"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spnActualizarCodTipoCont"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="@string/msgeditTxtConsultarNomTipoCont" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spnActualizarCodTipoCont"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="40dp"
        android:text="@string/msgInsertCodigo"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btnActualizarTipoCont"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTxtActualizarNomTipoCont"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:drawableRight="@drawable/update"
        android:onClick="ActualizarContrato"
        android:text="@string/btnActualizarContrato" />

    <EditText
        android:id="@+id/editTxtActualizarHorasTipoCont"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnActualizarTipoCont"
        android:layout_alignLeft="@+id/textView3"
        android:layout_marginBottom="22dp"
        android:ems="10"
        android:hint="@string/msgeditTxtConsultarHorasTipoCont" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTxtActualizarHorasTipoCont"
        android:layout_alignLeft="@+id/editTxtActualizarNomTipoCont"
        android:text="@string/msgInsertHoras"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTxtActualizarNomTipoCont"
        android:layout_alignLeft="@+id/editTxtActualizarNomTipoCont"
        android:text="@string/msgInsertNombre"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/msgactivityactualizarcontrato"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
