<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".InsertarModalidadActAcadActivity" >
    
    <EditText
        android:id="@+id/idModalidadAA"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="@string/msgidModalidadAA"        
        android:maxLength="6" />

    <EditText
        android:id="@+id/idNombreModAA"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/idModalidadAA"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="@string/msgNombreModAA"
        android:maxLength="6" />
   
</RelativeLayout>