<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CargaAcademicaMenuActivity" >

    <Button
        android:id="@+id/button3_MenuCARGAACADEMICA_Consult"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button2_MenuCARGAACADEMICA_Delete"
        android:layout_centerVertical="true"
        android:drawableRight="@drawable/search"
        android:text="@string/button3a4_menuTABLACARGAACAD_CONSULT"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/button2_MenuCARGAACADEMICA_Delete"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button3_MenuCARGAACADEMICA_Consult"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:drawableRight="@drawable/clear"
        android:text="@string/button2a4_menuTABLACARGAACAD_DELETE"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/button1_MenuCARGAACADEMICA_Insert"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2_MenuCARGAACADEMICA_Delete"
        android:layout_alignLeft="@+id/button2_MenuCARGAACADEMICA_Delete"
        android:layout_marginBottom="24dp"
        android:drawableRight="@drawable/save2"
        android:text="@string/button1a4_menuTABLACARGAACAD_INSERT"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
</RelativeLayout>