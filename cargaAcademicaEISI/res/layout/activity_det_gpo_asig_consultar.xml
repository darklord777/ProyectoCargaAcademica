<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DetGpoAsigConsultarActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="@string/btnActualizarDetGpoAsig"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/spnIdDetGpoAsig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />

    <EditText
        android:id="@+id/edtIdLocalDetGpoAsig"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtIdModDetGpoAsig"
        android:layout_below="@+id/edtIdModDetGpoAsig"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/edtIdLocalDetGpoAsig" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/edtIdModDetGpoAsig"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spnIdDetGpoAsig"
        android:layout_below="@+id/edtCodMatDetGpoAsigs"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/edtIdModDetGpoAsig" />

    <EditText
        android:id="@+id/edtCodMatDetGpoAsigs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtIdModDetGpoAsig"
        android:layout_below="@+id/spnIdDetGpoAsig"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="@string/edtCodMatDetGpoAsig" />

</RelativeLayout>
