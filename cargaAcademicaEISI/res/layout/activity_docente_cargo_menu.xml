<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DocenteCargoMenuActivity" >

    <Button
        android:id="@+id/btn1NuevoCargo_docente"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn2ConsultarNvoDCargo_docente"
        android:layout_alignParentTop="true"
        android:layout_marginTop="66dp"
        android:drawableRight="@drawable/save2"
        android:text="@string/btnNuevoDocentCargo" />

    <Button
        android:id="@+id/btn2ConsultarNvoDCargo_docente"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn4EliminarNvoCargo_docente"
        android:layout_below="@+id/btn1NuevoCargo_docente"
        android:layout_marginTop="42dp"
        android:drawableRight="@drawable/search"
        android:text="@string/btnConsultarDocentCargo" />

    <Button
        android:id="@+id/btn4EliminarNvoCargo_docente"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn2ConsultarNvoDCargo_docente"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:drawableRight="@drawable/clear"
        android:text="@string/btnEliminarDocentCargO" />

</RelativeLayout>