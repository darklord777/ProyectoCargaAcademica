<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AreMateriaEliminarActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="@string/btnEliminarAreaMat"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:id="@+id/spnElimAreaMateria"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="26dp" />

    <EditText
        android:id="@+id/edtIdDeptoAreMat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spnElimAreaMateria"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/edtIdDeptoAreMat" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnEliminarDetGpoAsig"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="67dp"
        android:drawableRight="@drawable/clear"
        android:onClick="eliminarDetalleAreaMat"
        android:text="@string/btnEliminarDetGpoAsig" />

    <EditText
        android:id="@+id/edtCodMateAreaMat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtIdDeptoAreMat"
        android:layout_below="@+id/edtIdDeptoAreMat"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="@string/edtCodMateAreaMat" />

</RelativeLayout>
